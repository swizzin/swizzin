root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use 2 spaces for json
[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# use 2 spaces for YML
[*.{yml,yaml}]
indent_size = 2

[[bash]]
indent_size = 4
# -ln bash
shell_variant      = bash
# -ci
switch_case_indent = true
# -sr
space_redirects    = true

[[shell]]
indent_size = 4
# -ln bash
shell_variant      = bash
# -ci
switch_case_indent = true
# -sr
space_redirects    = true
