#!/bin/bash
#npm related functions

function npm_install() {
    if [[ ! -f /etc/apt/sources.list.d/nodesource.list ]]; then
        bash <(curl -sL https://deb.nodesource.com/setup_18.x) >> $log 2>&1 || {
            echo_error "Failed to install node"
            return 1
        }
    elif [[ -f /etc/apt/sources.list.d/nodesource.list ]]; then
        npm_update
    fi

    if [[ ! $(command -v npm) ]]; then
        echo_progress_start "Installing npm"
        apt_install nodejs build-essential
        echo_progress_done "Npm installed"
    fi
}

function npm_update() {
    if [[ -f /etc/apt/sources.list.d/nodesource.list ]]; then
        if [[ $(grep -m1 -oP 'node_\d+' /etc/apt/sources.list.d/nodesource.list | sed 's/node_//g') -lt "18" ]]; then
            echo_progress_start "Upgrading nodejs to version 18 LTS"
            bash <(curl -sL https://deb.nodesource.com/setup_18.x) >> $log 2>&1 || {
                echo_error "Failed to install node"
                return 1
            }
            apt_update
            apt_upgrade
            echo_progress_done "Npm upgraded"
        fi
    fi
}

function yarn_install() {
    npm_install
    echo_progress_start "Installing yarn"
    npm install --quiet --global yarn >> $log 2>&1
    echo_progress_done "Yarn installed"
}
